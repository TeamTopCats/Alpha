
{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "allowJs": true, 
      "experimentalDecorators": true,
      "baseUrl": "src",
      "paths": {
        "components/*": ["components/*"],
        "style/*" : ["style/*"],
        "assets/*":["assets/*"]
      }, 
      "lib": [
        "dom",
        "es5",   
        "es2015.core",
        "es2015.promise",
        "es2015.collection",
        "es2016.array.include",
        "es2017.string",
        "es2017.object",
        "es2018.promise",
        "es2015.reflect",
        "es2017.typedarrays"
      ],
      "esModuleInterop": true
    },
    "include": [
      "./src/**/**/*"
    ]
  }